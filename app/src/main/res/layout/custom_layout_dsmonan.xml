<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen5dp">

    <ImageView
        android:id="@+id/imgMonAn"
        android:background="@drawable/backgroundheader"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@color/colorTransparentGreen">

        <TextView
            android:id="@+id/txtTenMonAn"
            android:text="aaaaaaaaaaa"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size18sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtGiaTien"
            android:text="bbbbbbbbb"
            android:gravity="center|bottom"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
